G = nx.DiGraph()
G.add_node('Célula Procariota')
G.add_node('Célula Eucariota')
G.add_node('Sin núcleo definido')
G.add_node('Núcleo definido')
G.add_node('ADN en nucleoide')
G.add_node('ADN en núcleo')
G.add_node('Sin orgánulos')
G.add_node('Orgánulos membranosos')
G.add_node('Ribosomas libres')
G.add_node('Ribosomas libres y unidos al retículo endoplasmático')
G.add_node('Tamaño pequeño')
G.add_node('Tamaño variable')
G.add_node('Pared celular (en bacterias)')
G.add_node('Pared celular (en plantas)')
G.add_node('Flagelo (si presente)')
# Agregar bordes con etiquetas
G.add_edge('Célula Procariota', 'Sin núcleo definido')
G.add_edge('Célula Procariota', 'ADN en nucleoide')
G.add_edge('Célula Procariota', 'Sin orgánulos')
G.add_edge('Célula Procariota', 'Ribosomas libres')
G.add_edge('Célula Procariota', 'Tamaño pequeño')
G.add_edge('Célula Procariota', 'Pared celular (en bacterias)')
G.add_edge('Célula Procariota', 'Flagelo (si presente)')
G.add_edge('Célula Eucariota', 'Núcleo definido')
G.add_edge('Célula Eucariota', 'ADN en núcleo')
G.add_edge('Célula Eucariota', 'Orgánulos membranosos')
G.add_edge('Célula Eucariota', 'Ribosomas libres y unidos al retículo endoplasmático')
G.add_edge('Célula Eucariota', 'Tamaño variable')
G.add_edge('Célula Eucariota', 'Pared celular (en plantas)')
G.add_edge('Célula Eucariota', 'Flagelo (si presente)')
# Posiciones de los nodos
pos = nx.spring_layout(G)

# Dibujar nodos y bordes
nx.draw_networkx_nodes(G, pos, node_size=700)
nx.draw_networkx_edges(G, pos, arrows=True)
nx.draw_networkx_labels(G, pos)
